{
	"name": "nightdream",
	"displayName": "Nightdream",
	"description": "A theme (not just) for those who like to work at night.",
	"icon": "assets/icon.png",
	"version": "0.0.32",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/mrheio/nightdream-vscode-theme.git"
	},
	"engines": {
		"vscode": "^1.87.0"
	},
	"publisher": "mrheio",
	"categories": [
		"Themes"
	],
	"contributes": {
		"themes": [
			{
				"label": "Nightdream",
				"uiTheme": "vs-dark",
				"path": "./themes/Nightdream-color-theme.json"
			},
			{
				"label": "Nightdream Sunlight",
				"uiTheme": "vs-dark",
				"path": "./themes/Nightdream-Sunlight-color-theme.json"
			}
		]
	},
	"scripts": {
		"dev": "bun --watch run src/index.ts",
		"build": "bun run src/index.ts"
	},
	"devDependencies": {
		"@types/node": "^20.12.7"
	}
}
